{
  "compilerOptions": {
    "outDir": "build",
    "target": "esnext",
    "module": "none",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "typeRoots": [
      "./node_modules/@types",
      "./typings",
    ],
    "removeComments": true
  },
  "include": [
    "**/**.ts",
    "test/**/**.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
